<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.lincolnstuart.desafiointegradorfirebase">

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DesafioIntegradorFirebase">
        <activity android:name=".view.activity.GameEditorActivity"></activity>
        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.GameDetailActivity" />
        <activity
            android:name=".view.activity.SignupActivity"
            android:theme="@style/Theme.DesafioIntegradorFirebaseAuthorization" />
        <activity
            android:name=".view.activity.LoginActivity"
            android:theme="@style/Theme.DesafioIntegradorFirebaseAuthorization" />
        <activity android:name=".view.activity.GameListActivity" />
    </application>

</manifest>